//remove old validation messages
$("#feed_form_errors").empty();

<% if @feed.errors.any? %>
  //display new validation messages
  <% @feed.errors.each do |key, value| %>
    $("#feed_form_errors").append('<div class=”notice”><%= escape_javascript(key)%> <%= escape_javascript(value)%></div>');
  <% end %>
<% else %>
  $("#flash").append('<%= j render partial: "shared/notice_banner" %>');
<% end %>
